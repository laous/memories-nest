// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId        String    @id @default(uuid())
  email         String    @unique
  username      String    @unique
  password      String
  name          String?
  profile       Profile?
  memories      Memorie[] @relation("OwnMemories")
  likedMemories Memorie[] @relation("LikedMemories")
}

model Profile {
  profileId String  @id @default(uuid())
  bio       String?
  image     String?
  user      User    @relation(fields: [userId], references: [userId])
  userId    String  @unique
}

model Memorie {
  memorieId   String   @id @default(uuid())
  title       String
  description String
  image       String
  hashtags    String[]
  owner       User     @relation("OwnMemories", fields: [ownerId], references: [userId])
  ownerId     String
  likedBy     User[]   @relation("LikedMemories")
}
